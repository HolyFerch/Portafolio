---
import Layout from "../layouts/Layout.astro";
import Experience from "../components/Experience.astro";
import ExperienceIcon from "../components/icons/ExperienceIcon.astro";
import Badge from "../components/Badge.astro";
import LinkedInIcon from "../components/icons/LinkedInIcon.astro";
import GitHubIcon from "../components/icons/GitHubIcon.astro";
import ContactoIcon from "../components/icons/ContactoIcon.astro";
import Socials from "../components/Socials.astro";
---

<Layout
	title="Portafolio de Fernando Ríos Arellano | Desarrollador y Programador Web"
	description="En busca de experiencia y crecimiento laboral"
>
	<main class="px-10">
		<section id="sobre-mi" class="w-full mx-auto lg:w-[920px] py-40">
			<img
				class="rounded-full size-[130px] mb-5"
				src="https://media.licdn.com/dms/image/C4E03AQHazcV1ypSsvw/profile-displayphoto-shrink_800_800/0/1643655587183?e=2147483647&v=beta&t=A8Nb-ui0RdGRdQHgeuhkE5FS_fgiZxcqwoWspBNtUgY"
				alt="Fernando Ríos"
			/>
			<h1
				class="text-black text-2xl md:text-3xl lg:text-5xl font-extrabold flex flex-row gap-x-4 pb-4"
			>
				Hola, soy Fernando Ríos
				<a
					href="https://www.linkedin.com/in/fernando-r%C3%ADos-arellano-0b94b7230/"
					target="_blank"
					rel="noopener"
					class="flex justify-center items-center"
				>
					<Badge>Disponible para trabajar</Badge>
				</a>
			</h1>
			<h2 class="text-black text-2xl text-pretty">
				Ingeniero en Tecnologías de la Información / Desarrollo de
				Software egresado de la Universidad del Norte. Soy un
				programador novato con mucha hambre de explotar mis
				conocimientos y habilidades.
			</h2>

			<nav class="flex gap-6 mt-8 flex-wrap text-black">
				<Socials
					href="https://www.linkedin.com/in/fernando-r%C3%ADos-arellano-0b94b7230/"
				>
					<LinkedInIcon class="size-3 md:size-5" />
					LinkedIn
				</Socials>
				<Socials href="https://github.com/HolyFerch">
					<GitHubIcon class="size-3 md:size-5" />
					GitHub
				</Socials>
				<Socials href="mailto:fernando.rios10@hotmail.com">
					<ContactoIcon class="size-3 md:size-5" />
					fernando.rios10@hotmail.com
				</Socials>
			</nav>
		</section>

		<section id="experiencia" class="w-full mx-auto lg:w-[820px]">
			<h2 class="text-black text-3xl font-semibold mb-7 flex gap-x-5">
				<ExperienceIcon class="size-8" />
				Experiencia Laboral
			</h2>
			<Experience />
		</section>
	</main>
</Layout>
